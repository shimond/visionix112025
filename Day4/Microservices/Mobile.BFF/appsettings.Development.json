{
  "Logging": {
    "LogLevel": {
      "Yarp.ReverseProxy": "Trace",
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "payment-route": {
        "ClusterId": "payment-cluster",
        "Match": {
          "Path": "/payment/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/payment"
          }
        ]
      },
      "sms-route": {
        "ClusterId": "sms-cluster",
        "Match": {
          "Path": "/sms/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/sms"
          }
        ]
      }
    },
    "Clusters": {
      "payment-cluster": {
        "Destinations": {
          "payment-api": {
            "Address": "http://payment-api"
          }
        }
      },
      "sms-cluster": {
        "Destinations": {
          "smsmanagment": {
            "Address": "http://smsmanagment"
          }
        }
      }
    }
  }
}
